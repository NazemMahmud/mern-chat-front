version: '3'
services:
    web:
        container_name: WHATSAPP_FRONT
        stdin_open: true
        build:
            context: .
            dockerfile: Dockerfile.dev
        ports:
            - "3000:3000"
        volumes:
            - /app/node_modules
            - .:/app
        working_dir:  "/app"
